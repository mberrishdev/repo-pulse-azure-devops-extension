{
  "manifestVersion": 1,
  "id": "repo-pulse",
  "name": "Repo Pulse",
  "publisher": "mberrishdev",
  "version": "0.0.0",
  "description": "A modern Azure DevOps extension built with React and TypeScript that provides enhanced repository and pull request management capabilities.",
  "public": false,
  "categories": ["Azure Repos"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "demands": ["api-version/3.0"],
  "scopes": [
    "vso.code_full"
  ],
  "icons": {
    "default": "static/images/logo.png"
  },
  "contributions": [
    {
      "id": "home-page",
      "type": "ms.vss-web.hub",
      "targets": ["ms.vss-code-web.code-hub-group"],
      "properties": {
        "name": "Repo Pulse",
        "uri": "dist/home/home.html"
      }
    }
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "static",
      "addressable": true
    }
  ]
}
